<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_prof_oscura">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MenuDocentesActivity">

        <TextView
            android:id="@+id/txtNoticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="Noticias y Comunicados"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSubirNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBIR NOTICIA/COMUNICADO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNoticias"/>

        <TextView
            android:id="@+id/txtTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="Trabajos prÃ¡cticos"
            android:background="@color/black"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSubirNoticia" />

        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/spinnerCurso"
            app:layout_constraintTop_toBottomOf="@id/txtTrabajo"
            tools:layout_editor_absoluteX="15dp" />

        <Spinner
            android:id="@+id/spinnerCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#AAAAAA"
            android:entries="@array/Cursos"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="@+id/txtView"
            app:layout_constraintTop_toBottomOf="@id/txtView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Asignatura"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/spinnerAsignatura"
            app:layout_constraintTop_toBottomOf="@id/spinnerCurso"
            tools:layout_editor_absoluteY="329dp" />

        <Spinner
            android:id="@+id/spinnerAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#AAAAAA"
            android:entries="@array/Asignaturas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3" />

        <Button
            android:id="@+id/btnVerTrabajo"
            android:layout_width="242dp"
            android:layout_height="44dp"
            android:text="VER TRABAJOS"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinnerAsignatura" />

        <Button
            android:id="@+id/btnSeleccionarTrabajo"
            android:layout_width="242dp"
            android:layout_height="44dp"
            android:text="SELEC. NUEVO TRABAJO"
            android:backgroundTint="#778F891B"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnVerTrabajo" />

        <Button
            android:id="@+id/btnSubirTrabajo"
            android:layout_width="242dp"
            android:layout_height="44dp"
            android:text="SUBIR NUEVO TRABAJO"
            android:backgroundTint="#771B8F20"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSeleccionarTrabajo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>