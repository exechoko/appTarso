<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/fondo_prof_oscura">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.slideshow.SlideshowFragment">


            <EditText
                android:id="@+id/edtEmailProf"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="150dp"
                android:textColorHint="@color/white"
                android:hint="Correo"
                android:background="@color/black"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text=""
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/edtPassProf"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/white"
                android:background="@color/black"
                android:hint="ContraseÃ±a"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                android:ems="10"
                android:inputType="numberPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtEmailProf"/>

            <Button
                android:id="@+id/btnIngresarProf"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="INGRESAR"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtPassProf"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


